{
  "name": "echomint-arkiv-indexer",
  "version": "1.0.0",
  "description": "Arkiv indexer for EchoMint - tracks market data and sentiment for dynamic NFTs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "arkiv",
    "polkadot",
    "kusama",
    "nft",
    "indexer",
    "blockchain"
  ],
  "author": "EchoMint Team",
  "license": "MIT",
  "dependencies": {
    "@arkiv/core": "^0.1.0",
    "@polkadot/api": "^11.0.0",
    "@polkadot/util": "^12.0.0",
    "axios": "^1.6.0",
    "dotenv": "^16.3.0",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  }
}
